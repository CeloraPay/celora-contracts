{
    "printWidth": 100,
    "tabWidth": 4,
    "useTabs": false,
    "semi": true,
    "singleQuote": false,
    "bracketSpacing": true,
    "trailingComma": "es5",
    "arrowParens": "avoid",
    "overrides": [
        {
            "files": "*.sol",
            "options": {
                "printWidth": 120,
                "tabWidth": 4,
                "useTabs": false,
                "singleQuote": false,
                "bracketSpacing": true,
                "explicitTypes": "always",
                "compiler": "0.8.20"
            }
        }
    ],

    "plugins": ["node_modules/prettier-plugin-solidity"]
}
